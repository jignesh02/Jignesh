<%- include("../layouts/header") %>
    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Tables</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">View category</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">  n             
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View category</h5>
                            <div class="table-responsive">

                                <form method="post" action="/category/deleteMultipleCategory">
                                    <table id="zero_config" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <input type="checkbox" id="checkAll">
                                                    <button type="submit" id="deleteAll">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </th>
                                                <th><b>Category Name</b></th>
                                                <th><b>Status</b></th>
                                                <th><b>Delete</b></th>
                                                <th><b>Update</b></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% categoryData.map((v,i)=>{ %>
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" name="Ids" value="<%= v.id %>">
                                                    </td>
                                                    <td>
                                                        <%= v.categoryName %>
                                                    </td>
                                                    <td>
                                                        <% if(v.status){ %>
                                                            <a href="/category/changeStatus/?catId=<%= v.id %>&status=false"
                                                                style="background-color: #048304; padding: 6px 10px; color: white; border-radius: 5px;">Active</a>
                                                            <% }else{ %>
                                                                <a href="/category/changeStatus/?catId=<%= v.id %>&status=true"
                                                                    style="margin-left: 10px; background-color: #d82e2e; padding: 6px 10px; color: white; border-radius: 5px;">Deactive</a>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <a href="/category/deleteCategory/?catID=<%= v.id %>">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="/category/updateCategory/<%= v.id %>">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>

                                    </table>

                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include("../layouts/footer") %>


            <script>
                $('#deleteAll').hide()
                $('#checkAll').click(function () {
                    $('input:checkbox').prop('checked', this.checked);
                    $('#deleteAll').toggle();
                });
            </script>